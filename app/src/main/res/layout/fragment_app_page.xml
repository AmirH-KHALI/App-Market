<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingStart="8dp"
android:paddingTop="8dp"
android:paddingEnd="8dp"
tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_container"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/app_picture"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="fitXY"
                    tools:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:layout_toEndOf="@+id/image_container"
                android:maxWidth="180dp"
                android:maxLines="1"
                tools:text="this is just for test, there is not real named" />

            <TextView
                android:id="@+id/app_provider"
                android:layout_width="wrap_content"
                android:maxWidth="100dp"
                android:textSize="12sp"
                android:maxLines="1"
                tools:text="Telegram.Co"
                android:layout_height="24dp"
                android:layout_below="@id/app_name"
                android:layout_alignStart="@id/app_name"/>


        </RelativeLayout>

        <!-- -->

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:textAllCaps="false"
                android:text="@string/text_install"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@color/colorPrimary"/>

        <!-- Critical Information -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@color/colorPrimary"/>
        <!-- Pictures -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@color/colorPrimary"/>
        <!-- Description -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="@color/colorPrimary"/>
        <!-- Miscellaneous -->

    </LinearLayout>
</ScrollView>


</FrameLayout>